<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="undoBarStyle">@style/UndoBar</item>

        <!-- Colored status bar for KitKat -->
        <!-- name="android:windowTranslucentStatus" tools:targetApi="19">@color/colorPrimary</item>
        <item name="android:fitsSystemWindows" tools:targetApi="19">true</item-->
    </style>

    <!-- Style for the snack bar -->
    <style name="UndoBar" parent="@style/UndoBarMaterialStyle">
        <item name="buttonStyle">@style/UndoBarButton</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="UndoBarButton" parent="@style/UndoBarButtonMaterial">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
